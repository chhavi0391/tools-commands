kubectl cluster-info
kubectl get nodes
kubectl get pods -ns 
kubectl logs <pod name>
kubectl logs -f <pod name>   [----live logs*]
kubectl exec -it multi-container-pod -c nginx -- /bin/bash  [ here multi-conatine-pod is pod name and nginx is the container_name ]
kubectl exec -it multi-container-pod -c sidecar -- sh
kubectl logs multi-container-pod -c nginx  ----view logs per container
kubectl cp multi-container-pod:/temp/demo.txt ./demo.txt -c sidecar  ----[this is the command to fetch a file from a conatiner]

